{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./lib",
      "resolveJsonModule": true,
      "declaration": true,
      "allowJs": true,
      "checkJs": false
    },
    "include": [
      "lib/**/*.ts",
      "lib/**/*.js"
    ],
    "exclude": [
      "node_modules",
      "test"
    ]
  }